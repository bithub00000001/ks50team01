        WHERE
        	PST_NO = #{postNum};
    </select>
    

	
	<!-- 조회수 증가 -->
    <update id="increaseViewCount" parameterType="String">
        UPDATE 
        	POST
        SET 
        	PST_INQ_CNT = PST_INQ_CNT + 1
        WHERE 
        	PST_NO = #{postNum};
    </update>
    


    
	
