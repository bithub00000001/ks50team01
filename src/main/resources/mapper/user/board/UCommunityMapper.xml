   	<!-- 게시글 카테고리 리스트 조회 -->
    <select id="getPostCateList" resultMap="categoryResultMap">
    	/* 게시글 카테고리 리스트 조회 */
        SELECT 
			PST_CTGRY_NO,
			PST_CTGRY_NM
		FROM 
