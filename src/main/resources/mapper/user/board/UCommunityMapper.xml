    <!-- 게시물 번호 가져오기 -->
    <select id="getPostNo" resultType="int">
        SELECT 
        	MAX(PST_NO) + 1 
        FROM POST
    </select>
    
    
    
 	<update id="setPostCode" parameterType="Map">
	    UPDATE 
	    	POST
	    SET 
	    	PST_NO = CONCAT('PST_', (#{postNum}, 3, '0'))
	    WHERE 
	    	PST_NO = #{postNum};
	</update>   
        	


    
    
	<!-- getPostByPostNum 쿼리 정의 -->
	<select id="getPostByPostNum" resultMap="postResultMap">
		/* 게시글 상세 조회 */
		SELECT
			P.PST_NO, 
			P.REG_MBR_ID, 
			C.PST_CTGRY_NM,
			P.PST_TTL, 
			P.PST_CN, 
			COUNT(M.PST_CMNT_NO) OVER () AS PST_CMNT_TOTAL,
			P.PST_INQ_CNT,  
			P.PST_LIKE_TOTAL, 
			P.PST_DISLIKE_TOTAL, 
			P.PST_REPT_TOTAL, 
			P.ACT_YN, 
			P.REG_YMD, 
			P.MDFCN_YMD, 
			P.DEL_YMD,
			M.PST_CMNT_NO,
			M.REG_MBR_ID,
			M.PST_CMNT_CN,
			M.PST_CMNT_LIKE_TOTAL,
			M.PST_CMNT_DISLIKE_TOTAL,
			M.PST_CMNT_REPT_TOTAL,
			M.ACT_YN,
			M.REG_YMD,
			M.MDFCN_YMD,
			M.DEL_YMD
		FROM
			POST AS P
			INNER JOIN
			POST_CATEGORY AS C
			ON
			P.PST_CTGRY_NO = C.PST_CTGRY_NO
			LEFT JOIN
			POST_COMMENT AS M
			ON
			P.PST_NO = M.PST_NO
	    WHERE
	        P.PST_NO = #{postNum};
	</select>
	
	<select id="getCommentByPostNum" resultMap="postCommentMap">
		/* 해당 게시글의 모든 댓글 조회*/
        SELECT
        	PST_CMNT_NO,
